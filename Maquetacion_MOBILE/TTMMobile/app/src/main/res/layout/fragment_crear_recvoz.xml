<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.crearRVoz.CrearReconocimientoVozFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:text="Crear Alarma"
            android:textColor="#035397"
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="28dp">
        </TextView>

        <Spinner
            android:id="@+id/SPAlarmsTypes"
            android:layout_width="334dp"
            android:minHeight="50dp"
            android:background="#FFD09B"
            android:textSize="18sp"
            android:layout_height="wrap_content">
        </Spinner>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/voice"
            android:padding="5dp">
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/waves_2"
            android:padding="5dp">
        </ImageView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/AlarmasRV"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="280dp"
            tools:listitem="@layout/alarm_item"/>

    </LinearLayout>
</FrameLayout>